</strong>
<br/>
<%= form_tag all_items_path, :method => 'get' do %>
  <div class="form-group navbar-form searching_div">
  <%= text_field_tag :search, params[:search], :class=>"form-control search_input", :placeholder=>"Search here..." %>
  <%= submit_tag " â–º ", :name => nil, :class=>" btn btn-default" %>
  </div>
</form>
<% end %>


<br/><br/><br/><br/>



<div class="row">

<% for @item in @items %>
  <div class="col-md-4">
    <div id="wrapper">
    <%= link_to image_tag(@item.image.url, :size=>"350x400", :class=>"existing_image"),  item_path(@item)%>
    <h1 class="text">Edit </h1>
  </div>
<strong><%= @item.item_name %></strong><br/>
<strong><%= @item.author %></strong><br/>
<strong>ISBN: <%= @item.isbn %></strong><br/>
<br/><br/>
</div>

<%end%>
</div>
<center>
  <%= will_paginate @items %>
</center>

