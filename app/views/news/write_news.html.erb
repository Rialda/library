<div class="form-group">
<%= form_for News.new, url: {action: "create"} do |f| %>
  <h3> Write new: </h3>
  <%= f.text_field :title, id:"ime1", class: "form-control", placeholder: "News Title" %></br>
  <%= f.text_field :author, id:"ime2", class: "form-control", placeholder: "Author name" %></br>
  <%= f.bootsy_area :news_body, id:"ime2", class: "form-control", placeholder: "Article text", rows: 30  %></br>

  <%= f.file_field :cover_image, id:"ime2", class: "form-control" %></br>


<br/>
<br/>

  <%= f.submit "Add", class:"btn-info btn1" %>
<% end %>

</div>
