  <% @book=Item.find_by_id(@i)%>

  <div class="col-md-3">
    <%= link_to image_tag(@book.image.url, :size=>"250x300"),  single_item_path(@book)%><br/></br>
    <h5><strong><%=@book.item_name%>, <%=@book.author%></strong></h5>
    <h6> Ed.: <%=@book.edition%> </h6>
    <h6> <%=@book.publisher%>, &nbsp;<%=@book.year_published%> </h6>

  </div>
<% end %>
</div>

