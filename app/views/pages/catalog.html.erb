

<%= form_tag catalog_path, :method => 'get' do %>
  <div class="form-group navbar-form searching_div">
  <%= text_field_tag :search, params[:search], :class=>"form-control search_input", :placeholder=>"Search this section" %>
  <%= submit_tag " â–º ", :name => nil, :class=>" btn btn-default" %>
  </div>
</form>
<% end %>
<br/><br/><br/><br/>

  <div class="row">
  <% for @i in @books %>
  <% @book=Item.find_by_id(@i)%>
  <div class="col-md-4">
    <%= link_to image_tag(@book.image.url, :size=>"250x300"),  single_item_path(@book)%><br/></br>
    <h5><strong><%=@book.item_name%>, <%=@book.author%></strong></h5>
    <h6> Ed.: <%=@book.edition%> </h6>
    <h6> <%=@book.publisher%>, &nbsp;<%=@book.year_published%> </h6>
    <h6> <strong> ISBN: </strong><%=@book.isbn%></h6>

    <br/><br/>
  </div>
  <% end %>
</div>



<center>
  <center>
    <%= will_paginate @books %>
  </center>
</center>

